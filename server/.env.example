# Aura's African Football League - Environment Variables (Example)
# Copy this file to .env and fill in real values before deploying.

# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.example.mongodb.net/aafl

# Port the Express server listens on
PORT=3002

# Optional: OpenAI API key for AI commentary (leave blank to use fallback)
OPENAI_API_KEY=

# Optional: Email credentials for Nodemailer results notifications
EMAIL_USER=
EMAIL_PASS=

# JWT secret if implementing real auth later
JWT_SECRET=replace_me_with_secure_random
